<?xml version="1.0" encoding="utf-8" ?>

<config:template-call
	xmlns:config="http://www.top-logic.com/ns/config/6.0"
	final="true"
	template="com.top_logic/table.template.xml"
>
	<arguments
		model="selection(research/research/artworks/topicsTree.layout.xml#Tree)"
		type="Artworks:Manuscript"
	>
		<dialogs>
			<layout-reference resource="research/research/artworks/bibtexImportDialog.layout.xml"/>
			<layout-reference resource="research/research/artworks/createManuscriptDialog.layout.xml"/>
		</dialogs>
		<name key="dynamic.5ed9a82e-cf2b-4525-a5c7-adb3d943584a">
			<en>Manuscripts</en>
			<de>Manuscripts</de>
		</name>
		<modelBuilder class="com.top_logic.model.search.providers.ListModelByExpression"
			elements="topic->$topic.get(`Topics:Topic#dataItems`).filter(item->$item.instanceOf(`Artworks:Manuscript`))"
			supportsElement="element->$element.instanceOf(`Artworks:Manuscript`)"
		/>
		<configurationProviders>
			<configurationProvider class="com.top_logic.layout.table.provider.ButtonColumnProvider"
				columnId="filePathButton"
			>
				<columnLabel key="dynamic.6fde63b9-d89a-49a2-99bf-8d5675549122">
					<en>filePathButton</en>
					<de>filePathButton</de>
				</columnLabel>
				<buttons>
					<button id="ID_37882d9b_cf93_4035_ba7d_70656522deb1"
						class="ivanizki.research.layout.manuscript.ManuscriptFilePathClipboardHandler"
						image="/icons/clipboardButtonIcon.png"
						disabledImage="/icons/clipboardButtonIconDisabled.png"
					>
						<resourceKey key="dynamic.086d6464-6c92-4794-8b14-1f7e0680e05b">
							<en>Copy to Clipboard</en>
							<de>Copy to Clipboard</de>
						</resourceKey>
					</button>
				</buttons>
			</configurationProvider>
			<configurationProvider class="ivanizki.research.layout.manuscript.ManuscriptTableConfigurationProvider"/>
		</configurationProviders>
		<buttons>
			<button id="exportExcel"
				class="com.top_logic.layout.table.export.ExcelExportHandler"
			/>
			<button id="exportData"
				class="ivanizki.research.data.DataExportHandler"
				image="css:fas fa-file-download"
				resourceKey="class.ivanizki.research.data.I18NConstants.DATA_EXPORT_HANDLER_LABEL"
			/>
			<button id="importData"
				class="ivanizki.research.data.DataImportHandler"
				image="css:fas fa-file-upload"
				resourceKey="class.ivanizki.research.data.I18NConstants.DATA_IMPORT_HANDLER_LABEL"
			/>
		</buttons>
	</arguments>
</config:template-call>