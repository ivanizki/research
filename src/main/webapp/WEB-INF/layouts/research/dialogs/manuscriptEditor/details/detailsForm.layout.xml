<?xml version="1.0" encoding="utf-8" ?>

<layout>
	<components>
		<component class="com.top_logic.knowledge.gui.layout.DefaultButtonComponent"/>
		<component class="ivanizki.framework.TypeBasedEditComponent"
			form-context-provider="ivanizki.research.layout.manuscript.ArticleFormContextProvider"
			model="selection()"
			name="Form"
			page="/jsp/manuscript.jsp"
			resetInvisible="true"
			titleKey="default.for.title"
			type="Artworks:Manuscript"
		>
			<buttons>
				<button id="frameworkSave"
					class="ivanizki.framework.WrapperSaveHandler"
					clique="save"
					executability="InEditMode"
					resourceKey="frameworkSave"
				/>
				<button id="frameworkApply"
					class="ivanizki.framework.WrapperApplyHandler"
					clique="apply"
					executability="InEditMode"
					resourceKey="frameworkApply"
				/>
				<button id="frameworkEdit"
					class="com.top_logic.layout.form.component.SwitchEditCommandHandler"
					clique="edit"
					executability="SwitchToEditMode"
					resourceKey="frameworkEdit"
				/>
			</buttons>
		</component>
	</components>
</layout>